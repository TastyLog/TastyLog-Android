<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:gravity="center">

    <View
        android:id="@+id/view_loading_img"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:background="@color/sub_color_gray5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_loading_title"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="18dp"
        android:background="@color/sub_color_gray5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_loading_img"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_loading_category"
        android:layout_width="60dp"
        android:layout_height="9dp"
        android:layout_marginTop="3dp"
        android:background="@color/sub_color_gray5"
        app:layout_constraintStart_toStartOf="@id/view_loading_title"
        app:layout_constraintTop_toBottomOf="@+id/view_loading_title" />

    <View
        android:id="@+id/view_loading_distance_and_review"
        android:layout_width="130dp"
        android:layout_height="9dp"
        android:layout_marginTop="8dp"
        android:background="@color/sub_color_gray5"
        app:layout_constraintStart_toStartOf="@id/view_loading_category"
        app:layout_constraintTop_toBottomOf="@id/view_loading_category" />

    <View
        android:id="@+id/view_loading_rating"
        android:layout_width="130dp"
        android:layout_height="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/sub_color_gray5"
        app:layout_constraintStart_toStartOf="@id/view_loading_distance_and_review"
        app:layout_constraintTop_toBottomOf="@+id/view_loading_distance_and_review" />

</androidx.constraintlayout.widget.ConstraintLayout>
